<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="gui.controller.RegisterController">
  <children>
    <Label layoutX="200.0" layoutY="36.0" prefWidth="277.0" text="Register" id="main_title" />
    <Label layoutX="200.0" layoutY="70.0" prefHeight="56.0" prefWidth="327.0" id="sub_title" text="Please register below." />

    <Label layoutX="200.0" layoutY="120.0" text="Enter your username." />
    <TextField fx:id="fieldusername" layoutX="200.0" layoutY="145.0" prefWidth="200.0" promptText="Username" />

    <Label layoutX="200.0" layoutY="180.0" prefWidth="113.0" text="Enter your password." />
    <TextField fx:id="fieldpassword" layoutX="200.0" layoutY="205.0" prefWidth="200.0" promptText="Enter your password." />
    <Label fx:id="result" layoutX="200.0" layoutY="240.0" prefWidth="200.0" text="" />

    <Button layoutX="200.0" layoutY="270.0" mnemonicParsing="false" prefWidth="200.0" id="green_button" onAction="#registerUser" text="Register" />
    <Button layoutX="200.0" layoutY="315.0" mnemonicParsing="false" prefWidth="200.0" id="grey_button" onAction="#show_main_screen" text="Back" />
  </children>
  <stylesheets>
    <URL value="@style.css" />
  </stylesheets>
</AnchorPane>
